<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="INFO" monitorInterval="2">
  <Appenders>
    <Console name="Console" target="SYSTEM_OUT">
      <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss.SSS} | %t | %-5level | %c{1} | %msg %throwable{short.message}%n" />
    </Console>
  </Appenders>
  <Loggers>
    <Logger name="net.consensys.shomei" level="DEBUG" />
    <Logger name="net.consensys.shomei.rpc" level="DEBUG" />
    <Logger name="org.hyperledger.besu.ethereum.api.jsonrpc.execution" level="DEBUG" />
    <Root level="DEBUG">
      <AppenderRef ref="Console"/>
    </Root>
  </Loggers>
</Configuration>
