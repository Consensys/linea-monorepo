{
  "name": "bridge-ui",
  "version": "2.4.0",
  "private": true,
  "license": "(MIT OR Apache-2.0)",
  "type": "module",
  "scripts": {
    "build": "next build",
    "build:cache": "synpress",
    "build:cache:force": "synpress --force",
    "build:cache:headless": "synpress --headless",
    "check-types": "tsc --noEmit",
    "clean": "rimraf node_modules .next .next-env.d.ts",
    "dev": "next dev --turbopack",
    "install:playwright": "playwright install --with-deps",
    "postinstall": "pnpm run -F @consensys/linea-sdk-core build && pnpm run -F @consensys/linea-sdk-viem build",
    "lint": "eslint .",
    "lint:fix": "eslint --fix .",
    "start": "next start",
    "test:e2e:headful": "playwright test --project=chromium",
    "test:e2e:headless": "HEADLESS=true playwright test --project=chromium",
    "test:e2e:headless:ui": "HEADLESS=true playwright test --project=chromium --ui",
    "test:unit": "HEADLESS=true UNIT=true playwright test --project=unit"
  },
  "dependencies": {
    "@bigmi/react": "0.3.1",
    "@consensys/linea-sdk-viem": "workspace:*",
    "@gsap/react": "2.1.2",
    "@headlessui/react": "2.1.9",
    "@layerswap/wallet-evm": "1.0.2",
    "@layerswap/widget": "1.0.5",
    "@lifi/widget": "3.23.3",
    "@next/third-parties": "15.5.9",
    "@solana/wallet-adapter-base": "0.9.26",
    "@solana/wallet-adapter-react": "0.15.38",
    "@solana/web3.js": "1.98.2",
    "@tanstack/react-query": "5.87.4",
    "@wagmi/connectors": "5.8.5",
    "@wagmi/core": "2.17.3",
    "@web3auth/modal": "10.6.0",
    "auto-zustand-selectors-hook": "3.0.1",
    "clsx": "2.1.1",
    "date-fns": "4.1.0",
    "gsap": "3.13.0",
    "loglevel": "1.9.2",
    "motion": "12.10.1",
    "next": "15.5.9",
    "pino-pretty": "13.0.0",
    "react": "19.1.4",
    "react-dom": "19.1.4",
    "sharp": "0.33.5",
    "viem": "catalog:",
    "wagmi": "2.16.9",
    "zod": "catalog:",
    "zustand": "4.5.4"
  },
  "devDependencies": {
    "@consensys/eslint-config": "workspace:*",
    "@playwright/test": "1.53.2",
    "@svgr/webpack": "8.1.0",
    "@synthetixio/synpress": "4.1.0",
    "@types/fs-extra": "11.0.4",
    "@types/react": "19.1.2",
    "@types/react-dom": "19.1.2",
    "autoprefixer": "10.4.21",
    "dotenv": "catalog:",
    "nock": "14.0.1",
    "playwright-core": "1.53.2",
    "postcss": "8.5.3",
    "sass": "1.86.0"
  }
}
