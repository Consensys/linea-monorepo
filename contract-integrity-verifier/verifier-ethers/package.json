{
  "name": "@consensys/linea-contract-integrity-verifier-ethers",
  "version": "1.0.0",
  "description": "Ethers v6 adapter for @consensys/linea-contract-integrity-verifier",
  "author": "Consensys Software Inc.",
  "license": "Apache-2.0",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "bin": {
    "verify-contract-ethers": "./dist/cli.mjs"
  },
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "build": "tsup --tsconfig tsconfig.build.json",
    "test": "npx jest --bail --detectOpenHandles",
    "test:integration": "npx ts-node tests/integration.test.ts",
    "test:live": "npx ts-node tests/live.test.ts",
    "lint:ts": "npx eslint 'src/**/*.ts'",
    "lint:ts:fix": "npx eslint --fix 'src/**/*.ts'",
    "prettier": "prettier -c 'src/**/*.ts'",
    "prettier:fix": "prettier -w 'src/**/*.ts'",
    "lint:fix": "pnpm run lint:ts:fix && pnpm run prettier:fix",
    "clean": "rimraf dist node_modules coverage"
  },
  "keywords": [
    "ethereum",
    "ethers",
    "smart-contracts",
    "verification",
    "linea"
  ],
  "dependencies": {
    "@consensys/linea-contract-integrity-verifier": "workspace:*"
  },
  "devDependencies": {
    "@types/jest": "catalog:",
    "jest": "catalog:",
    "ts-jest": "catalog:",
    "tsup": "catalog:",
    "ethers": "catalog:"
  },
  "peerDependencies": {
    "ethers": ">=6.0.0"
  }
}
