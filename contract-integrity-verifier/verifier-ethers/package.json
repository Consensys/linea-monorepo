{
  "name": "@consensys/linea-contract-integrity-verifier-ethers",
  "version": "1.0.0",
  "description": "Ethers v6 adapter for @consensys/linea-contract-integrity-verifier",
  "author": "Consensys Software Inc.",
  "license": "Apache-2.0",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "bin": {
    "verify-contract-ethers": "./dist/cli.mjs",
    "generate-schema-ethers": "./dist/generate-schema-cli.mjs"
  },
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    },
    "./tools": {
      "import": "./dist/tools.mjs",
      "require": "./dist/tools.js"
    }
  },
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "build": "tsup --tsconfig tsconfig.build.json",
    "test": "jest --bail --detectOpenHandles",
    "test:integration": "ts-node tests/integration.test.ts",
    "test:live": "ts-node tests/live.test.ts",
    "lint": "eslint 'src/**/*.ts'",
    "lint:fix": "eslint --fix 'src/**/*.ts'",
    "clean": "rimraf dist node_modules coverage"
  },
  "keywords": [
    "ethereum",
    "ethers",
    "smart-contracts",
    "verification",
    "linea"
  ],
  "dependencies": {
    "@consensys/linea-contract-integrity-verifier": "workspace:*"
  },
  "devDependencies": {
    "@consensys/eslint-config": "workspace:*",
    "@types/jest": "catalog:",
    "jest": "catalog:",
    "ts-jest": "catalog:",
    "tsup": "catalog:",
    "ethers": "catalog:"
  },
  "peerDependencies": {
    "ethers": ">=6.0.0"
  }
}
