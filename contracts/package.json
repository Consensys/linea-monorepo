{
  "name": "contracts",
  "license": "(MIT OR Apache-2.0)",
  "type": "module",
  "engines": {
    "node": ">=22.22.0",
    "pnpm": ">=10.28.0"
  },
  "scripts": {
    "build": "hardhat compile",
    "test": "npm run autoupdate && hardhat test",
    "test:reportgas": "REPORT_GAS=true hardhat test",
    "coverage": "npm run autoupdate && SOLIDITY_COVERAGE=true hardhat coverage --solcoverjs ./.solcover.js",
    "autoupdate": "cd ../prover && cmd/dev-tools/testcase-gen/compression-aggregation/autoupdate.sh && cd ../contracts",
    "balance": "tsx scripts/balanceOf.ts",
    "prettier:sol": "prettier -c '**/*.sol'",
    "prettier:sol:fix": "prettier -w '**/*.sol'",
    "lint:sol": "solhint -f stylish 'src/**/*.sol'",
    "lint:sol:fix": "solhint --fix --noPrompt -f stylish 'src/**/*.sol'",
    "lint:ts": "eslint '**/*.{js,ts}'",
    "lint:ts:fix": "eslint --fix '**/*.{js,ts}'",
    "lint": "pnpm run lint:sol && pnpm run lint:ts && pnpm run prettier:sol",
    "lint:fix": "pnpm run lint:sol:fix && pnpm run lint:ts:fix && pnpm run prettier:sol:fix",
    "clean": "rimraf .openzeppelin build cache node_modules typechain-types coverage coverage.json ignition/deployments",
    "solidity:docgen": "command -v forge && hardhat docgen || echo 'Foundry installation required for Solidity docgen, skipping...'"
  },
  "devDependencies": {
    "@chainlink/contracts": "1.4.0",
    "@chainsafe/persistent-merkle-tree": "1.2.1",
    "@consensys/eslint-config": "workspace:*",
    "@ethereumjs/util": "9.0.3",
    "@lidofinance/lsv-cli": "1.4.0",
    "@lodestar/types": "1.38.0",
    "@nomicfoundation/hardhat-ignition": "3.0.8",
    "@nomicfoundation/hardhat-ignition-ethers": "0.15.11",
    "@nomicfoundation/hardhat-ethers": "3.0.8",
    "@nomicfoundation/hardhat-foundry": "1.1.3",
    "@nomicfoundation/hardhat-network-helpers": "1.0.12",
    "@nomicfoundation/hardhat-toolbox": "5.0.0",
    "@nomicfoundation/hardhat-verify": "2.0.12",
    "@openzeppelin/contracts": "4.9.6",
    "@openzeppelin/contracts-upgradeable": "4.9.6",
    "@typechain/hardhat": "9.1.0",
    "@types/diff": "5.2.0",
    "@types/yargs": "catalog:",
    "c-kzg": "4.1.0",
    "chai": "4.1.1",
    "colors": "1.4.0",
    "csv-parser": "3.0.0",
    "dotenv": "catalog:",
    "ethers": "6.14.3",
    "hardhat": "3.1.10",
    "hardhat-gas-reporter": "2.3.0",
    "hardhat-storage-layout": "0.1.7",
    "node-gyp": "10.1.0",
    "prettier-plugin-solidity": "2.2.1",
    "solhint": "6.0.3",
    "solidity-coverage": "0.8.17",
    "solidity-docgen": "0.6.0-beta.36",
    "tsx": "4.19.4",
    "yargs": "catalog:"
  }
}
