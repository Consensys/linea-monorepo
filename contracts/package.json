{
  "name": "contracts",
  "type": "module",
  "license": "(MIT OR Apache-2.0)",
  "engines": {
    "node": ">=22.22.0",
    "pnpm": ">=10.28.0"
  },
  "scripts": {
    "build": "npx hardhat compile",
    "test": "npm run autoupdate && npx hardhat test",
    "test:reportgas": "REPORT_GAS=true npx hardhat test",
    "coverage": "npm run autoupdate && npx hardhat test --coverage",
    "autoupdate": "cd ../prover && cmd/dev-tools/testcase-gen/compression-aggregation/autoupdate.sh && cd ../contracts",
    "balance": "tsx scripts/balanceOf.ts",
    "prettier:sol": "prettier -c '**/*.sol'",
    "prettier:sol:fix": "prettier -w '**/*.sol'",
    "lint:sol": "solhint -f stylish 'src/**/*.sol'",
    "lint:sol:fix": "solhint --fix --noPrompt -f stylish 'src/**/*.sol'",
    "lint:ts": "eslint '**/*.{js,ts}'",
    "lint:ts:fix": "eslint --fix '**/*.{js,ts}'",
    "lint": "pnpm run lint:sol && pnpm run lint:ts && pnpm run prettier:sol",
    "lint:fix": "pnpm run lint:sol:fix && pnpm run lint:ts:fix && pnpm run prettier:sol:fix",
    "clean": "rimraf build cache node_modules typechain-types coverage coverage.json",
    "solidity:docgen": "command -v forge && npx hardhat docgen || echo 'Foundry installation required for Solidity docgen, skipping...'"
  },
  "devDependencies": {
    "@chainlink/contracts": "1.4.0",
    "@chainsafe/blst": "2.2.0",
    "@chainsafe/persistent-merkle-tree": "1.2.1",
    "@consensys/eslint-config": "workspace:*",
    "@ethereumjs/util": "9.0.3",
    "@lidofinance/lsv-cli": "1.4.0",
    "@lodestar/types": "1.38.0",
    "@nomicfoundation/hardhat-ethers": "4.0.5",
    "@nomicfoundation/hardhat-ethers-chai-matchers": "3.0.3",
    "@nomicfoundation/hardhat-foundry": "3.0.0",
    "@nomicfoundation/hardhat-ignition": "3.0.8",
    "@nomicfoundation/hardhat-ignition-ethers": "3.0.8",
    "@nomicfoundation/hardhat-keystore": "3.0.3",
    "@nomicfoundation/hardhat-mocha": "3.0.11",
    "@nomicfoundation/hardhat-network-helpers": "3.0.4",
    "@nomicfoundation/hardhat-toolbox-mocha-ethers": "3.0.3",
    "@nomicfoundation/hardhat-typechain": "3.0.3",
    "@nomicfoundation/hardhat-verify": "3.0.11",
    "@nomicfoundation/ignition-core": "3.0.8",
    "@openzeppelin/contracts": "4.9.6",
    "@openzeppelin/contracts-upgradeable": "4.9.6",
    "@types/diff": "5.2.0",
    "@types/yargs": "catalog:",
    "c-kzg": "4.1.0",
    "chai": "5.2.0",
    "colors": "1.4.0",
    "csv-parser": "3.0.0",
    "dotenv": "catalog:",
    "ethers": "6.14.3",
    "hardhat": "3.1.10",
    "mocha": "11.7.0",
    "node-gyp": "10.1.0",
    "prettier-plugin-solidity": "2.2.1",
    "solhint": "6.0.3",
    "tsx": "catalog:",
    "yargs": "catalog:"
  }
}
