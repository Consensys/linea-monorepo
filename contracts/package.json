{
  "name": "contracts",
  "license": "(MIT OR Apache-2.0)",
  "engines": {
    "node": ">=22.22.0",
    "pnpm": ">=10.28.0"
  },
  "scripts": {
    "build": "TS_NODE_TRANSPILE_ONLY=1 npx hardhat compile",
    "test": "npm run autoupdate && npx hardhat test",
    "test:reportgas": "REPORT_GAS=true npx hardhat test",
    "coverage": "npm run autoupdate && SOLIDITY_COVERAGE=true npx hardhat coverage --solcoverjs ./.solcover.js",
    "autoupdate": "cd ../prover && cmd/dev-tools/testcase-gen/compression-aggregation/autoupdate.sh && cd ../contracts",
    "balance": "ts-node scripts/balanceOf.ts",
    "prettier:sol": "prettier -c '**/*.sol'",
    "prettier:sol:fix": "prettier -w '**/*.sol'",
    "lint:sol": "solhint -f stylish 'src/**/*.sol'",
    "lint:sol:fix": "solhint --fix --noPrompt -f stylish 'src/**/*.sol'",
    "lint:ts": "eslint '**/*.{js,ts}'",
    "lint:ts:fix": "eslint --fix '**/*.{js,ts}'",
    "lint": "pnpm run lint:sol && pnpm run lint:ts && pnpm run prettier:sol",
    "lint:fix": "pnpm run lint:sol:fix && pnpm run lint:ts:fix && pnpm run prettier:sol:fix",
    "clean": "rimraf .openzeppelin build cache node_modules typechain-types coverage coverage.json",
    "solidity:docgen": "command -v forge && npx hardhat docgen || echo 'Foundry installation required for Solidity docgen, skipping...'"
  },
  "devDependencies": {
    "@chainlink/contracts": "1.4.0",
    "@consensys/eslint-config": "workspace:*",
    "@ethereumjs/util": "9.0.3",
    "@nomicfoundation/hardhat-ethers": "3.0.5",
    "@nomicfoundation/hardhat-foundry": "1.1.3",
    "@nomicfoundation/hardhat-network-helpers": "1.0.10",
    "@nomicfoundation/hardhat-toolbox": "4.0.0",
    "@nomicfoundation/hardhat-verify": "2.1.1",
    "@openzeppelin/contracts": "4.9.6",
    "@openzeppelin/contracts-upgradeable": "4.9.6",
    "@openzeppelin/hardhat-upgrades": "2.5.1",
    "@typechain/hardhat": "9.1.0",
    "@types/diff": "5.2.0",
    "@types/yargs": "catalog:",
    "c-kzg": "4.1.0",
    "chai": "4.1.1",
    "colors": "1.4.0",
    "csv-parser": "3.0.0",
    "dotenv": "catalog:",
    "ethers": "6.14.3",
    "hardhat": "2.28.3",
    "hardhat-deploy": "0.12.4",
    "hardhat-gas-reporter": "2.3.0",
    "hardhat-storage-layout": "0.1.7",
    "hardhat-tracer": "2.8.2",
    "node-gyp": "10.1.0",
    "prettier-plugin-solidity": "2.2.1",
    "solhint": "6.0.3",
    "solidity-coverage": "0.8.17",
    "solidity-docgen": "0.6.0-beta.36",
    "yargs": "catalog:"
  }
}
