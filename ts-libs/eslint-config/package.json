{
  "name": "@consensys/eslint-config",
  "version": "1.0.0",
  "description": "Shared ESLint v9 flat config for Linea monorepo",
  "author": "Consensys Software Inc.",
  "license": "(MIT OR Apache-2.0)",
  "type": "module",
  "scripts": {
    "clean": "rimraf node_modules"
  },
  "types": "./index.d.ts",
  "exports": {
    ".": {
      "types": "./index.d.ts",
      "default": "./index.js"
    },
    "./nextjs": {
      "types": "./nextjs.d.ts",
      "default": "./nextjs.js"
    },
    "./node": {
      "types": "./node.d.ts",
      "default": "./node.js"
    }
  },
  "files": [
    "*.js",
    "*.d.ts"
  ],
  "peerDependencies": {
    "eslint": "catalog:",
    "prettier": "catalog:",
    "typescript": "catalog:"
  },
  "devDependencies": {
    "@eslint/js": "9.39.2",
    "eslint-config-next": "16.1.1",
    "eslint-config-prettier": "10.1.8",
    "eslint-plugin-import": "2.32.0",
    "eslint-plugin-prettier": "5.5.4",
    "globals": "17.0.0",
    "typescript-eslint": "8.53.0"
  }
}
